<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C03A9F4"
    android:columnCount="2">

    <Space
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/buttonExit1"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="bottom|right"
        android:backgroundTint="#B303A9F4"
        android:text="X"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_margin="10dp"
        android:text="Permission to access SMS messaging for event notifications"
        android:textAlignment="textStart"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBoxPermission"
        android:layout_width="223dp"
        android:layout_height="55dp"
        android:layout_row="2"
        android:layout_column="1"
        android:text="Permission Granted"
        android:textColor="#3F51B5"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonSumbitPermission"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#AD00BCD4"
        android:text="Submit"
        android:textColor="#3F51B5" />

</GridLayout>