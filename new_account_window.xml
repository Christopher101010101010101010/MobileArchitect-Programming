<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6B03A9F4"
    android:orientation="vertical"
    android:padding="50dp"

    android:visibility="visible"
    android:id="@+id/new_account_window"
    tools:context=".newAccountWindow"
    >

    <Space
        android:layout_width="185dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:text="New Account Log-in"

        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="149dp"
        android:layout_height="33dp"
        android:layout_row="2"
        android:layout_column="0"
        android:text="Username:  "
        android:textAlignment="textEnd"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextUsername2"
        android:layout_width="161dp"
        android:layout_height="56dp"
        android:layout_row="2"
        android:layout_column="1"
        android:ems="10"
        android:inputType="text"
        android:text="new username"
        android:textColor="#645A5A" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="146dp"
        android:layout_height="34dp"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Password:  "
        android:textAlignment="textEnd"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextPassword2"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:layout_row="3"
        android:layout_column="1"
        android:ems="10"
        android:inputType="text"
        android:text="new password"
        android:textColor="#786F6F" />

    <Space
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/buttonGenerateAcct"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#DD00BCD4"
        android:text="create new account"
        android:textColor="#3F51B5" />

    <Button
        android:id="@+id/buttonExit1"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="bottom"
        android:backgroundTint="#B303A9F4"
        android:text="X" />

</GridLayout>