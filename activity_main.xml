<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5D03A9F4"
    android:columnCount="2"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity"
    android:id="@+id/activity_main">

    <!-- log in header -->
    <Space
        android:layout_width="20dp"
        android:layout_height="100dp"

        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2" />


    <TextView
        android:id="@+id/idLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"

        android:fontFamily="serif"

        android:text="Event Tracker Log-in"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="20dp"
        android:layout_height="75dp"

        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <!-- text objects for log in and password prompt -->

    <TextView
        android:id="@+id/idTextUsername"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_centerInParent="true"
        android:text="Username:"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idTextPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_centerInParent="true"
        android:text="Password:"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- edit text object for username and password data -->
    <EditText
        android:id="@+id/idUsername"
        android:layout_width="186dp"
        android:layout_height="55dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_centerInParent="true"
        android:text="enter username"
        android:textColor="#716666" />

    <EditText
        android:id="@+id/idPassword"
        android:layout_width="183dp"
        android:layout_height="55dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_centerInParent="true"
        android:text="enter password"
        android:textColor="#786C6C" />

    <!-- button object for account creation and log-in credential test -->
    <Space
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/buttonNewUser"
        android:layout_width="150dp"
        android:layout_height="67dp"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_blue_bright"
        android:text="New Account"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="150dp"
        android:layout_height="67dp"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_blue_bright"
        android:text="Log in"
        android:textAlignment="center"
        android:textAllCaps="true"

        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold" />

</GridLayout>