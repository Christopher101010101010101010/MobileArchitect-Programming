<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6103A9F4"
    android:columnCount="2">

    <Space
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/buttonExitUpdate"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="bottom|right"
        android:backgroundTint="#B303A9F4"
        android:text="X"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:text="Update an Appointment"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switchAdd"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="Add"
        android:textAlignment="textEnd"
        android:textColor="#0226E7" />

    <Switch
        android:id="@+id/switchRemove"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="left"
        android:text="Remove"
        android:textColor="#001ABD" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Event Title:"
        android:textAlignment="textEnd"
        android:textColor="#1C34BA"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextUpdateTile"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_row="3"
        android:layout_column="1"
        android:ems="10"
        android:inputType="text"
        android:text="enter event title"
        android:textColor="#625F5F" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:text="Event date/time:"
        android:textAlignment="textEnd"
        android:textColor="#1D36B8"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewUpdateDescription"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:text="Event Description:"
        android:textAlignment="textEnd"
        android:textColor="#182EA9"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextUpdateDateTime"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_row="4"
        android:layout_column="1"
        android:ems="10"
        android:inputType="text"
        android:text="enter date/time"
        android:textColor="#6D6969" />

    <EditText
        android:id="@+id/editTextUpdateDescription"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_row="5"
        android:layout_column="1"
        android:ems="10"
        android:inputType="text"
        android:text="enter description"
        android:textColor="#6D6767" />

    <Space
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:backgroundTint="#D300BCD4"
        android:text="update"
        android:textColor="#243383"
        android:textStyle="bold" />


</GridLayout>